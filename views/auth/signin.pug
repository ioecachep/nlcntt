extends ../layout/default
block script  
    script(src='/public/script/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js', type='text/javascript')
    link(rel='stylesheet', href='/public/css/auth-singin.css')
    link(rel='stylesheet', href='/public/open-iconic/font/css/open-iconic-bootstrap.css')

block content
    .container.pt-5
        .wrapper.fadeInDown
            #formContent
                h2.active Đăng nhập
                if errors
                    each error in errors
                        p=error
                br
                // Login Form
                form(id="loginFORM", action="", method="post")
                    input#login(type='text', name='user', placeholder='tài khoản', value=values ? values.user : "")
                    input#password(type='password', name='password', placeholder='mật khẩu', value=values ? values.password : "")
                    input#url(type='hidden', name='url')
                    input(type='submit', value='Đăng nhập')
                    a.pb-3.d-block(href="/auth/signup") Đăng kí
                // Remind Passowrd
                //- #formFooter
    script.
        if (localStorage.getItem("URL_P"))
            $('#url').val(localStorage.getItem("URL_P"))
